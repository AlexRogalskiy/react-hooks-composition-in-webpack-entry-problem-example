{
    "compilerOptions": {
        "outDir": "build",
        "module": "esNext",
        "target": "es6",
        "moduleResolution": "node",
        "incremental": true,
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,

        "inlineSourceMap": true,

        "declarationMap": true,
        "declaration": true,
        "composite": true,

        "noImplicitAny": true,
        "baseUrl": "./src"
    },
    "include": [],
    "typeRoots": [
        "./node_modules"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}